{
  "env": {
    "es6": true,
    "node": true
  },
  "parser": "babel-eslint",
  "globals": {
    "fetch": false,
    "FileReader": false,
    "FormData": false
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "experimentalObjectRestSpread": true
    }
  },
  "extends": [
    "react-app",
    "standard",
    "standard-react"
  ],
  "rules": {
    "comma-dangle": [
      "error",
      "always-multiline"
    ],
    "react/jsx-fragments": [
      "off"
    ]
  }
}
